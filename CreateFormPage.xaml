<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="roomTime.CreateFormPage"
             BackgroundColor="#1E1E1E"
             Shell.NavBarIsVisible="False" >
    <VerticalStackLayout
            Spacing="20"
            Padding="30,0">
        <Label 
            Text="Wybierz liczbÄ™ wierszy (maksymalnej liczby lekcji) i kolumn (dni lekcyjne):"
            FontSize="Medium" 
            TextColor = "White"
            />

        <Entry x:Name="RowEntry" 
               Placeholder="Max liczba lekcji" 
               Keyboard="Numeric" 
               TextColor = "White"
               HorizontalOptions="FillAndExpand" />

        <Entry x:Name="ColumnEntry" 
               Placeholder="Dni lekcyjne" 
               Keyboard="Numeric" 
               TextColor = "White"
               HorizontalOptions="FillAndExpand" />

        <Button Text="Create Table" 
                Clicked="OnCreateTableClicked" 
                HorizontalOptions="Center" />
        <Grid x:Name="DynamicGrid"
              Padding="10"
              RowSpacing="5"
              ColumnSpacing="5" />
        <Button x:Name="ConfirmButton"
                Text="Confirm"
                Clicked="OnConfirmButtonClicked"
                HorizontalOptions="Center"
                IsVisible="False" />
    </VerticalStackLayout>
</ContentPage>