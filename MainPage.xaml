<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="roomTime.MainPage"
             Title="roomTime">

    <StackLayout
            VerticalOptions="CenterAndExpand"
            HorizontalOptions="CenterAndExpand"
            Spacing="20"
            Padding="30,0" >
        <Button Text="Dodaj Plan Lekcji"
                WidthRequest="200"
                HeightRequest="60"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Clicked="GoToCreatePL"/>
        <Label Text="lub"
                FontSize="18"
                HeightRequest="42"
                TextColor="White"
                BackgroundColor="#512BD4"
                VerticalOptions="Center"
                HorizontalOptions="Center" />
        <Button Text="Edytuj Plan Lekcji"
                WidthRequest="200"
                HeightRequest="60"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Clicked="GoToEditPL"/>
    </StackLayout>

